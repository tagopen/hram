#note__modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='callbackLabel', aria-hidden='true')
  .modal-dialog.modal-lg(role='document')
    .modal-content.modal__content
      button.close.modal__close(type='button', data-dismiss='modal', aria-label='Close')
        +svg("close")(class="close__icon")
      .modal-body.modal__body
        .modal__info
          each item, i in content.index.note.modal.items
            p.modal__text!=item.text
#video__modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='callbackLabel', aria-hidden='true')
  .modal-dialog.modal__size(role='document')
    .modal-content.modal__content-video
      button.close.modal__close.modal__close--video(type='button', data-dismiss='modal', aria-label='Close')
        +svg("close")(class="close__icon")
      .modal-body.modal__body
        .modal__video-box.embed-responsive.embed-responsive-16by9
          iframe.modal__iframe(src="https://www.youtube.com/embed/czvmUmHyMW0" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen) 
#build__modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='callbackLabel', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content.modal__content
      button.close.modal__close(type='button', data-dismiss='modal', aria-label='Close')
        +svg("close")(class="close__icon")
      .modal-body.modal__body
        .modal__heading!=content.index.build.modal.heading
        .modal__subheading!=content.index.build.modal.subheading
        form.m-form.js-form(action="inc/lp.php?v=2", method="post")
          .row
            .col-24    
              fieldset.form-group.m-form__group
                input.form-control.m-form__input(type="tel", name="phone", placeholder="Введите ваш телефон", required)
                +svg('phone')(class="m-form__icon")
            .col-24    
              fieldset.form-group.m-form__group
                input.form-control.m-form__input(type="email", name="email", placeholder="Введите ваш e-mail", required)
                +svg('email')(class="m-form__icon")
            .col-24    
              label.m-form__label!=content.index.build.modal.label
              fieldset.form-group.m-form__group
                input.form-control.m-form__input(type="text", name="amount", placeholder="Введите количество кирпичей", required)
                +svg('chat')(class="m-form__icon")
            .col-24
              fieldset.form-group.m-form__group
                input.form-control.m-form__input(type="text", name="name", placeholder="Введите ваше имя", required)
                +svg('person')(class="nt-form__icon")    
            .col-24        
              .btn-groups.form__btn-groups
                button.btn.btn--size(name='form', value!=content.index.build.modal.btn.value, type='submit', data-loading-text!=content.index.build.modal.btn.loading)!=content.index.build.modal.btn.text
                  +svg('arrow-right-o')(class="btn__ic")
                .m-form__confident.confident Гарантируем конфиденциальность ваших данных 
